<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    
    <!-- Enable seeing generated files (optional, for debugging) -->
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>$(BaseIntermediateOutputPath)Generated</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>

  <!-- Show generated files in Solution Explorer (optional) -->
  <ItemGroup>
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/*.cs" />
  </ItemGroup>
  
  <ItemGroup>
    <None Include="$(CompilerGeneratedFilesOutputPath)/**/*.cs" Visible="true" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\..\src\Refbesh.CastBesh\Refbesh.CastBesh.csproj" />
  </ItemGroup>

</Project>